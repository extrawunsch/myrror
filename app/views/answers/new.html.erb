<h1>TEST</h1>




<%# <% Iteration to create every Form for the questions %>

<div class="question-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 m-5">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel('pause')">
        
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% n = 0 %>
          <% @form.questions.each do |question| %>
            <li data-target="#carouselExampleIndicators" data-slide-to=><%= n += 1 %></li>
          <% end %>
        </ol>

        <div class="carousel-inner">
          
          <div class="carousel-item active" data-interval="1000000">
             <div class="d-block w-100" id="answer-form">
              <h1>Start the quiz!</h1>
            </div>
          </div>

          <%@form.questions.each do |question| %>
            <div class="carousel-item" data-interval="1000000">
              <h1><%=question.question_content%></h1>
              
              <div class="d-block w-100" id="answer-form">
              <% case question.question_type%>
                <% when "Open Question" %>
                  <%= simple_form_for [@form, @answer] do |f| %>
                    <%= f.input :answer_content, label: "Answer" %>
                    <%= f.submit "Submit Answer", class: "btn-above-page", id: "simple-form"%>
                  <%end%>
                <% when "Multiple-Choice" %>
                  <%= simple_form_for [@form, @answer] do |f| %>
                    <% question.answers.each  do |answer| %>
                      <%= f.input :answer_content, as: :boolean, checked_value: true, unchecked_value: false , collection: [answer.answer_content], label: answer.answer_content,  required: false %>
                    <%end%>
                    <%= f.submit "Submit Answer", class: "btn-above-page", id: "simple-form"%>
                  <%end%>
                <% when "Single-Choice" %>
                    <%= simple_form_for [@form, @answer] do |f| %>
                      <% question.answers.each  do |answer| %>
                        <%= f.input :answer_content, as: :radio_buttons, collection: [answer.answer_content], label: "", required: false %>
                      <%end%>
                    <%= f.submit "Submit Answer", class: "btn-above-page", id: "simple-form"%>
                    <%end%>
                <% when "Star Rating" %>
                  <%# <% Rating Bootstrap %> 
                  <h2>Nothing</h2>
                <% else "Text Slider" %>
                  <%# <% Simple Form Slider %> 
                  <h2>Nothing</h2>
                <% end %>
              </div>
            </div>
          <% end %>

          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
          
      </div>
    </div>
  </div>
</div>