<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <%= f.label :question_content %>
  <%= f.text_field :question_content %>
  <%= f.label :question_type %>
  <%= f.text_field :question_type %>
  <%= f.label :question_topic %>
  <%= f.text_field :question_topic %>
  <button type="button" data-action="nested-form#remove">
    Remove question
  </button>

  <%= f.hidden_field :_destroy %>
</div>