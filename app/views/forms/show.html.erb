<div class="background">
  <div class="main-container">
    <div class="sidebar">dashboard</div>
    <div class="form-display">
    <div class="tab-bar">
      <div class="button-position">
        <%=link_to "Back to all my Forms", forms_path, class:"btn-above-page mr-5"%>
      </div>
    </div>
    <div>
      <hr id="divider">
        <div class="headline"><h1>Here's your form:</h1></div>
        <div class=show-content><h1><span> <%= @form.name %> | <%= @form.presented_on %> </span></h1></div>
        <ul style="list-style-type:none; border-left:1px solid #000;height:50vh">
         <% @questions.each do |question|  %>
          <li>
            <div class="show-content"><span><%= question.question_content %> | <%= link_to "See all #{question.answers.count} Answers", form_question_answers_path(@form, question) %><span></div>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
    </div>
    </div>
  </div>
</div>
