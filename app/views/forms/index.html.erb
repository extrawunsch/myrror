    <ul class="dashboard">
      <li class="dashboard-items">
        <div class="indexline">
          <div class="number-item inline-label">
            <%= "#{@forms.count}" %>
            <i id="icon-index"  class="fas fa-pen"></i>
          </div>
          <div class="index-label">
            <p>my:forms</p>
          </div>
        </div>
      </li>
      <li class="dashboard-items">
        <div class="indexline">
          <div class="number-item inline-label">
            <% sum = 0 %>
            <% @forms.each do |form| %>
              <% sum += form.questions.count %>
            <% end %>
            <%= "#{sum}" %> 
            <i id="icon-index"  class="fas fa-question-circle"></i>
          </div>
        </div>
        <div class="index-label">
          <p>my:questions</p>
        </div>
      </li>
      <li class="dashboard-items">
        <div class="indexline">
          <div class="number-item inline-label">
            <% sum = 0 %>
            <% @forms.each do |form| %>
              <% form.questions.each do |question| %>
                <% valid_answers = question.answers.reject{|number| number.answer_content == "0"} %>
                <% sum = valid_answers.count %>
               <% end %>
            <% end %>
            <%= "#{sum}" %>
            <i id="icon-index" class="fas fa-comment-dots"></i>
          </div>
          <div class="index-label">
            <p>my:answers</p>
          </div>
        </div>
      </li>

      <li class="dashboard-items inline-label">
        <div class="indexline">
          <div class="number-item">
            <%= "#{@average_rating}" %>
            <i id="icon-index"  class="fas fa-star"></i>
          </div>
          <div class="index-label">
            <p>my:rating</p>
          </div>
        </div>
      </li>
    </ul>

      <div class="divider-index"><h4>My Forms</h4></div>
      <div class="card-grid" id="slick-show">
        <% @forms.each do |form| %>
          <div class="card-index-page">
            <div class="delete-form"><%= link_to "", form_path(form), data: {:confirm => 'Are you sure you want to delete your form?'}, :method => :delete, class:"fas fa-trash"  %></div>
              <% result = form.questions.first.answers.count - 1 %>
              <%  sum = form.questions.first.answers.map { |answer| answer.answer_content.to_i }.drop(1).sum %>
              <% rating = sum.to_f / result.to_f %>
              <% if result < 2 %>
                <div class="stars-form"> <i id="icon-dashboard" class="fas fa-star"></i> <%= "#{sum}" %> </div>
              <% else %>
                <div class="stars-form"> <i id="icon-dashboard" class="fas fa-star"></i> <%= "#{rating.round(2)}" %> </div>
              <% end %>
            <div class="card-content">
              <%=link_to "#{form.name}",  form_path(form), class:"card-link-index"%>
              <p><strong><%=form.presented_on.strftime('%A, %b %d')%></strong></p>
              <hr>
                <% form.questions.each do |question| %>
                  <% valid_answers = question.answers.reject{|number| number.answer_content == "0"} %>
                  <% sum = valid_answers.count %>
                <% end %>
              <div class="inside-card"><%= "my:questions: #{form.questions.count} " %></div>
              <div class="inside-card"><%= "my:answers: #{sum}" %></div>
            </div>
          </div>
        <% end %>
      </div>




    </div>
  </div>
</div>

