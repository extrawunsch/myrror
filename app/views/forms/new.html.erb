<div class="background">
  <%= render "components/vertical_navbar"%>
  <div class="dummy-temporary" style="width: 200px;"></div>
  <div class="main-container">
    <div class="inside-container">
      <div class="grid-container">

        <div class="item-a">
          <h4 style="color:$darkgray;" class="mb-2 mt-3 mx-3">My form</h4> 
          <%= simple_form_for(@form) do |f| %>
            <div class="card-questions-focus">
              <h5 style="color:darkgray;" class="mb-3">Step 1 - Add some information</h5>
              <%= f.input :presented_on, as: :string, input_html: {class: "datepicker"}, label: "Choose the dates" %>
              <%= f.input :name, label: "Title" %>
              <%= f.input :speaker, label: "Speaker Name" %>
            </div>
            <div class="card-questions-focus">
              <h5 class="mb-3" style="color:darkgray;">Step 2: Add your first question </h5>
              <%= simple_fields_for(@question) do |g| %>
                <%= g.input :question_content, as: :text, label: 'Add your first question' %>
              <% end %>
            <%= f.submit 'Continue', class: 'btn btn-click mt-4 mb-2' %>
          <% end %>
            </div>
        </div>

        <div class="item-b pt-5">
        <h5 class="mb-3 mx-3 mt-5" style="color:$darkgray;">Predefined questions</h5>
          <div class="card-questions-scroll">
            <%= form_tag new_form_path(@form, remote: true), method: :get do %>
              <%= select_tag 'query', options_for_select(['General', 'Content','Body Language', 'Speaking Style', 'Organization']), class: "form-control mb-4", prompt: 'Choose a question topic', onchange:"this.form.submit();", selected: params[:query] %>
            <% end %>
          
            <h5 class="mb-3 mt-3">Select your question</h5>
            <% @questions.each do |question| %>
              <div class="question-card">
                <textarea class="textarea" id="copyhere" readonly><%= question.question_content %></textarea>
                <button class='btn btn-plus'>+</i></button>
              </div>
            <% end %>
          </div> 
        </div>    




      </div>
    </div>
  </div>
</div>

