<div class="container w-100 background pb-5">

  <div class="mx-5 w-50">
    <h3 class="text-center pt-5 pb-3">Information</h3>
    <%= simple_form_for(@form) do |f| %>
      <%= f.input :presented_on, label: "Date" %> 
      <%= f.input :name, label: "Title" %>

      <h3 class="text-center pt-5 pb-3">Create your questions</h3>
      <%= simple_fields_for(@question) do |g| %>
        <%= g.input :question_content, label: 'Add your first question' %>
        <%= g.input :question_type, label: 'Add the question type', collection: ["Open Question", "Multiple-Choice", "Single-Choice", "Star Rating", "Text Slider"] %>
        <%= g.input :question_topic, label: 'Add a topic', collection: ["Body Language", "Speaking Style", "Content", "General", "Organization"] %>
      <% end %>

      <%= f.submit 'Create Form', class: 'btn btn-click mt-3' %>
    <% end %>
  </div>

 

</div>