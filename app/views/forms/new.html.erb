<div class="background pb-5">
  <h1 class="text-center pt-5 pb-3">Create your form</h1>
  <div class="grid-container">
    <div class="item-a">
      <div class="card-form">
        <h5 class="mb-3">Information</h5>
          <%= simple_form_for(@form) do |f| %>
          <%= f.input :presented_on, as: :string, input_html: {class: "datepicker"}, label: "Choose the dates" %>
          <%= f.input :name, label: "Title" %>
          <%= f.input :speaker, label: "Speaker Name" %>
      </div>
      <div class="mb-5">
        <div class="card-form">
          <h5 class="mb-4">Add your own question or copy one from the right</h5>
          <%= simple_fields_for(@question) do |g| %>
            <%= g.input :question_content, as: :text, label: 'Add your first question' %>

          <% end %>
        </div>
        <%= f.submit 'Continue', class: 'btn btn-click' %>
        <% end %>
      </div>
    </div>
    <div class="item-b">
      <div class="card-questions" style="color:darkgray;">
      <h4>Step 1</h4>
      <h4>Add your information and the first question</h4>
      </div>
      <div class="card-questions">
        <h5 class="mb-5" style="color:darkgray;">Don't know where to start? Copy a question</h5>
        <% @questions.each do |question| %>
          <div data-controller="clipboard" class="question-card">
            <textarea  data-target="clipboard.source" readonly><%= question.question_content %></textarea>
            <button class='btn btn-outline' data-action="clipboard#copy"><i class="far fa-clipboard"></i></button>
          </div>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
