<div class="background pb-5">
<h1 class="text-center pt-5 pb-3">Create your form</h1>
<div class="grid-container">
  <div class="item-a">
    <div class="card-form">
      <h4 class="mb-3">Information</h4>
        <%= simple_form_for(@form) do |f| %>
        <%= f.input :presented_on, label: "Date" %> 
        <%= f.input :name, label: "Title" %>
    </div>
<div class="mb-5">
    <div class="card-form">
      <h4 class="mb-3">Create your questions</h4>
        <%= simple_fields_for(@question) do |g| %>
          <%= g.input :question_content, label: 'Add your first question' %>
          <%= g.input :question_type, as: :radio_buttons, label: 'Add the question type', 
            collection: ["Open Question", "Multiple-Choice", "Single-Choice", "Star Rating", "Text Slider"],
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'} %>
          <%= g.input :question_topic, as: :radio_buttons, label: 'Add a topic',
            collection: ["Body Language", "Speaking Style", "Content", "General", "Organization"], 
            input_html: { class: "tag-selector" },
            item_wrapper_class: 'tag-item' %>
        <% end %>
      </div>

      <%= f.submit 'Create Form', class: 'btn btn-click' %>
    <% end %>
  </div>
  </div>
    <div class="item-b">
      <div class="card-questions">
        <h4 class="mb-3">Select your Question</h4>
        <% @questions.each do |question| %>
          <%= question.question_content %>
          <div class="question_topic_tag"><%= "##{question.question_topic}" %></div>
          <br>
        <% end %>
      </div>
    </div>
  
</div>
</div>
