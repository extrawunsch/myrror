<div class="background">
  <%= render "components/vertical_navbar"%>
  <div class="dummy-temporary" style="width: 200px;"></div>
  <div class="main-container">
    <div class="inside-container">

      <div class="grid-container">
        <div class="item-a">
          <h4 style="color:$darkgray;" class="mb-2 mt-3 mx-3">My form</h4> 
          <div class="card-questions-focus">
            <h4 class="mb-3">Add more questions</h4>
            <%= simple_form_for([@form, @question], remote: true) do |f| %>
              <div class="form-group">
                <% @form.questions.each do |form_question| %>
                  <label for="text"><%= form_question.question_content %></label>
                  <textarea disabled="yes" class="form-control textarea-questions mb-3" type="text"></textarea>
                <% end %>
              </div>
              <%= f.input :question_content, placeholder: "What else do you want to know from the audience?", label: "Add another question" %>
              <%= f.input :question_topic, as: :radio_buttons, label: 'Add the topic',
                collection: ["Body Language", "Speaking Style", "Content", "General", "Organization"], 
                input_html: { class: "tag-selector" },
                item_wrapper_class: 'tag-item' %>
              <%= f.input :question_type, as: :radio_buttons, label: 'Add the question type', 
                collection: ["Open Question"],# "Multiple-Choice", "Single-Choice", "Star Rating", "Text Slider"],
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper',
                item_wrapper_class: 'category-item',
                input_html: {class: 'category-selector'} %>
              <%= f.submit 'Continue', class: 'btn btn-click mt-3' %>
            <% end %>
          </div>
        </div>
        
        <div class="item-b">
          <h5 class="mb-3 mx-3">Form Information</h5> 
          <div class="form-info-card">
            <div class="form-group">
              <label for="date">Date</label>
              <input id="date" disabled="yes" class="form-control mb-2" type="date" value=<%= @form.presented_on %>>
              <label for="name">Topic</label>
              <input id="name" disabled="yes" class="form-control mb-2" type="text" value=<%= @form.name %>>
              <label for="speaker">Speaker</label>
              <input id="speaker" disabled="yes" class="form-control" type="text" value=<%= @form.speaker%>>
            </div>
          </div>

          <h5 class="mb-3 mx-3 mt-5" style="color:$darkgray;">Predefined questions</h5>
          <div class="card-questions-scroll">
            <%= form_tag edit_form_path(@form, remote: true), method: :get do %>
              <%= select_tag 'query', options_for_select(['General', 'Content','Body Language', 'Speaking Style', 'Organization']), class: "form-control mb-4", prompt: 'Choose a question topic', onchange:"this.form.submit();", selected: params[:query] %>
            <% end %>
          
            <h5 class="mb-3 mt-3">Select your question</h5>
            <% @questions.each do |question| %>
              <div class="question-card">
                <textarea class="textarea" id="copyhere" readonly><%= question.question_content %></textarea>
                <button class='btn btn-plus'>+</button>
              </div>
            <% end %>
          </div>

        </div>
      </div>
      <%= link_to 'Create Form', success_form_path(@form), class: 'btn btn-outline mx-5' %>

    </div>
  </div>
</div>